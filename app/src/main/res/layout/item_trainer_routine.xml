<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    android:background="@drawable/bg_routine_card"
    android:clickable="true"
    android:elevation="4dp"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="@null"
        app:srcCompat="@drawable/mancuerna" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_routine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_primary_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_routine_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/login_secondary_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_trainer_edit_routine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#F4F6FA"
            android:clickable="false"
            android:contentDescription="@string/trainer_edit_routine_content_description"
            android:focusable="false"
            android:padding="10dp"
            app:srcCompat="@drawable/edit" />

        <ImageButton
            android:id="@+id/btn_trainer_delete_routine"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:background="#F4F6FA"
            android:clickable="false"
            android:contentDescription="@string/trainer_delete_routine_content_description"
            android:focusable="false"
            android:padding="10dp"
            app:srcCompat="@drawable/trash" />
    </LinearLayout>

</LinearLayout>